{
  "manifest_version": 3,
  "name": "__MSG_extensionName__",
  "version": "1.10.0",
  "description": "__MSG_extensionDescription__",
  "default_locale": "en",
  "permissions": ["storage", "activeTab", "scripting", "tabs"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-scripts/selector-capture.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/logo_16.png",
      "24": "icons/logo_24.png",
      "48": "icons/logo_48.png",
      "96": "icons/logo_96.png"
    },
    "theme_icons": [
      {
        "light": "icons/logo_16.png",
        "dark": "icons/logo_dark_16.png",
        "size": 16
      },
      {
        "light": "icons/logo_24.png",
        "dark": "icons/logo_dark_24.png",
        "size": 24
      },
      {
        "light": "icons/logo_48.png",
        "dark": "icons/logo_dark_48.png",
        "size": 48
      },
      {
        "light": "icons/logo_96.png",
        "dark": "icons/logo_dark_96.png",
        "size": 96
      }
    ]
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "icons/logo_16.png",
    "24": "icons/logo_24.png",
    "48": "icons/logo_48.png",
    "96": "icons/logo_96.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "webhooks@muench.dev"
    }
  }
}
